<div class="container">
  <div class="row p-3">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-2 mx-sm-auto shadow-lg rounded" style="background-image: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%);">
      <div class="text-center pt-2">
        <h3 class="text-black border border-white">新規投稿</h3>
      </div>

      <%= form_with model:item do |f| %>
        <div class="input-group mb-3 mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-camera"></i></span>
            <%= f.file_field :image, accept: "image/*", class: "w-100" %>
          </div>
        </div>
        <div class="input-group mb-3 mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-barcode"></i></span>
          </div>
            <%= f.text_field :name, class: "form-control", placeholder:" 商品名" %>
        </div>
        <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-store"></i></span>
            </div>
              <%= f.text_field :shop_name, class:"form-control", placeholder:"コンビニ名" %>
        </div>
        <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-pencil-alt"></i></span>
            </div>
              <%= f.text_area :introduction, class:"form-control", rows:"3", placeholder:"商品紹介：情報や感想をコチラへ" %>
        </div>
        <div class="input-group mb-3 mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-tag"></i></span>
          </div>
            <%= f.text_field :tag_name, class:"form-control", placeholder:" ,で複数タグ付け" %>
        </div>
        <div class="form-group text-right">
          <% if f.object.new_record? %>
            <%= f.submit '投稿する', class: "btn btn-primary rounded-pill" %>
          <% else %>
            <%= f.submit '更新する', class: "btn btn-primary rounded-pill" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>