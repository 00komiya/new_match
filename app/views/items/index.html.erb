<div class='container-fluid'>
  <div class="row p-3">
    <div class="col-md-3">
      <div class="text-center pt-2">
        <h3 class="text-black border border-white">タグ一覧</h3>
        <%= render 'searches/tag_list',tags: @tags %>
      </div>
    </div>
      <div class="col-md-6 offset-md-1" style="background-image: linear-gradient(to right, #74ebd5 0%, #9face6 100%);">
      <div class="text-center pt-2">
        <h3 class="text-black border border-white">新商品投稿一覧</h3></div>
      <div>
        <% if @items.present? %>
          <%= paginate @items %>
          <%= link_to '新しい順', items_path(latest: "true") %>|
          <%= link_to '古い順', items_path(old: "true") %>
        <% end %>
      </div>
      <%= render 'index', items: @items %>
    </div>
  </div>
</div>
