      <div class="text-center pt-2">
        <h3 class="text-black border border-white">マイプロフィール</h3>
      </div>
      <%= render 'users/info', user: current_user %>
    </div>

    <div class='col-sm-11 col-md-8 col-lg-6 offset-md-1'>
      <div class="text-center pt-2">
        <h3 class="text-black border border-white">投稿一覧</h3>
      </div>
      <%= render 'index', items: @items %>
    </div>
  </div>
</div>