<div class="container-field">
  <div class="row mt-5">
    <div class="col-sm-10 col-md-5 col-lg-3 m-3 taglist">
      <div class="text-center pt-2">
        <h3 class="text-black border-bottom border-white">
          <i class="fas fa-tag"></i>タグリスト (件数)</h3>
      </div>
      <%= render 'searches/tag_list',tags: @tags,user: @user%>
    </div>
      <div class="col-sm-12 col-md-8 col-lg-5 m-3 box">
        <div class="text-center pt-2">
          <h3 class="text-black border-bottom border-white">投稿一覧</h3>
        </div>
        <div>
          <% if @items.present? %>
            <%= link_to '新しい順', items_path(latest: "true") %>|
            <%= link_to '古い順', items_path(old: "true") %>
          <% end %>
        </div>
        <%= render 'index', items: @items %>
        <%= paginate @items %>
      </div>
  </div>
</div>
