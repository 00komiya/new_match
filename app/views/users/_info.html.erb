<div class="text-center pt-2">
  <%= image_tag user.get_profile_image, size:'150x70' %>
</div>
  <table class="table">
    <tr>
      <th>名前</th>
      <td colspan="2"><%= user.name %></td>
    </tr>
    <tr>
      <th>年代 / 性別</th>
      <td colspan="2"><%= user.age %> <%= user.sex %></td>
    </tr>
    <tr>
      <th>地域</th>
      <td colspan="2"><%= user.address %></td>
    </tr>
    <tr>
      <th>自己紹介</th>
      <td colspan="2"><%= simple_format user.introduction %></td>
    </tr>
    <tr>
      <th>❤一覧</th>
      <td colspan="2">
        <%= link_to "こちらをクリック", likes_user_path(@user) %></td>
    </tr>
  </table>
  <% if user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-dark btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% else %>
  <% end %>