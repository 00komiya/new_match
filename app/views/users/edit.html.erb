<div class="container">
  <div class="row p-3">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-2 mx-sm-auto shadow-lg rounded bg-warning">
      <div class="text-center pt-2">
        <h3 class="text-black border border-white">プロフィール詳細編集</h3>
      </div>

    <%= form_with model:@user, local:true do |f| %>
      <%= render 'layouts/errors', obj: @user %>
        <div class="form-group">
          <%= f.label "名前" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "プロフィール写真" %>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="row">
        <div class="col-6 form-group">
          <%= f.label "年代", class:"control-label" %>
          <%= f.select :age, [["",""], ["10代","10"], ["20代","20"], ["30代","30"], ["40代","40"], ["50代","50"], ["60代以上","60"] ], {}, class: "form-control" %>
        </div>
        <div class="col-6 form-group">
          <%= f.label "性別", class:'control-label' %>
          <%= f.select :sex, [["",""], ["女性","女性"], ["男性","男性"]], {}, class: "form-control" %>
        </div>
        </div>
        <div class="form-group">
          <%= f.label "地域（県や市など）" %>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "自己紹介（255文字未満）" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "メールアドレス" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="form-group text-right">
          <%= f.submit "更新する", class: "btn btn-info rounded-pill" %>
        </div>
    <% end %>
    </div>
  </div>
</div>

